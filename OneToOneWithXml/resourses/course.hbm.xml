<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
        <hibernate-mapping>
        
         <class name="com.eb.pojo.Course" table="courseInfo">

 		<id name="cid">
			<column name="Course_ID" />
			<generator class="foreign"><!-- if you want to create the table foreign key then you will be add that line in the making of table. -->
				<param name="property">s</param><!-- s:-object name of the class  -->
			</generator>
		</id>
		<one-to-one name="s" class="com.eb.pojo.Student"
			constrained="true"></one-to-one>
		
        <property name="cname" column="CourseName"/>
        <property name="fees" column="CourseFees"/>
        <property name="duration" column="CourseDuration"/>

	</class>
        
        </hibernate-mapping>