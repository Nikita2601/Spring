<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
        <hibernate-mapping>
        <class name="com.eb.pojo.Student" table="studentinfo"> <!-- name:-path of class name,table:-table name in while creating table in java -->
        <id name="sid" column="student_ID"> <!-- name:- properties of class,column:- which name you want to show in the java table. -->
        <generator class="native"/><!-- native means this is a generate the primary key and auto-increment for the id column -->
        </id>
        <property name="sname" column="studentName" />
		<property name="age"  column="studentAge" />
        <one-to-one name="c" class="com.eb.pojo.Course"
			cascade="save-update"></one-to-one>
     	
        </class>
     </hibernate-mapping>