<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
 <class catalog="onetoone" name="com.onetoone.model.Address" table="address_table">
  <id name="id" type="int">
   <generator class="foreign">
    <param name="property">user</param>
   </generator>
  </id>
  <property generated="never" lazy="false" name="addressLine" type="java.lang.String">
   <column name="addressLine"/>
  </property>
  <property generated="never" lazy="false" name="city" type="java.lang.String">
   <column name="city"/>
  </property>
  <property generated="never" lazy="false" name="pinCode" type="int">
   <column name="pinCode"/>
  </property>
  <one-to-one class="com.onetoone.model.User" name="user"/>
 </class>
</hibernate-mapping>
